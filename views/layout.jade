    - var navbar = { 'Index': '/', 'Pure HTML Table': '/table', 'Form': '/form', 'Devices via DB': '/devices', 'Devices via fetch': '/devicesFetch', 'Devices as JSON': '/api/devices'};
    ul
        each val, key in navbar
            li
                a(href=val)= key
    // Content
    block content

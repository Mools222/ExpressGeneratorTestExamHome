doctype html
html
    head
        meta(charset='UTF-8')
        meta(name='description', content='Eksamensopgave')
        meta(name='keywords', content='eksamen, html, css, javascript')
        meta(name='author', content='Morten Olsen')
        meta(name='viewport', content='width=device-width, initial-scale=1.0')
        title= title
        link(rel='stylesheet', href='/stylesheets/style.css')
    // Header
    header
        h1 IKEA Trådfri
        p Fremtidens Elpære
